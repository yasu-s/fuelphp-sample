{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
			"port": 9000,
			"pathMappings": {
				"/workspace": "/workspace"
			},
			"ignore": [
				"**/core/**/*.php",
				"**/packages/**/*.php",
				"**/vendor/**/*.php"
			]
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
			"port": 9000,
			"ignore": [
				"**/core/**/*.php",
				"**/packages/**/*.php",
				"**/vendor/**/*.php"
			]
        }
    ]
}
